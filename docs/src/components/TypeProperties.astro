---
import TypeProperty from '@components/TypeProperty.astro';

let body = (await Astro.slots.render('default')).trim();
const rootHeadingLevel = body.match(/<h(\d)/)?.[1];
const parts = body.split(new RegExp(`(?=<h${rootHeadingLevel} id=)`));
---

{
	parts.map((part) => <TypeProperty set:html={part} />)
}
