{
  "name": "@expressive-code/plugin-shiki",
  "version": "0.1.0",
  "description": "Shiki syntax highlighting plugin for Expressive Code, a text marking & annotation engine for presenting source code on the web.",
  "keywords": [],
  "author": "Tibor Schiemann",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format esm,cjs --dts --sourcemap --clean",
    "coverage": "vitest run --coverage",
    "test": "vitest run --reporter verbose",
    "test-watch": "vitest --reporter verbose",
    "watch": "pnpm build --watch src"
  },
  "dependencies": {
    "@expressive-code/core": "workspace:^0.1.0",
    "@internal/test-utils": "workspace:^",
    "hastscript": "^7.2.0",
    "shiki": "^0.14.1"
  },
  "devDependencies": {
    "typescript": "^5.0.4"
  }
}
